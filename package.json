{
  "name": "planogram-editor-v3",
  "private": true,
  "version": "0.0.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite --mode development",
    "build:dev": "vue-tsc && vite build --mode development",
    "build:prod": "vue-tsc && vite build --mode production",
    "preview": "vite preview",
    "electron:dev": "vite --host --mode development & electron .",
    "electron:build": "npm run build:prod && electron-builder",
    "electron:preview": "electron ."
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@types/three": "^0.173.0",
    "@vueuse/core": "^12.5.0",
    "electron": "^34.0.2",
    "electron-builder": "^25.1.8",
    "konva": "^9.3.18",
    "pinia": "^2.3.1",
    "three": "^0.173.0",
    "uuid": "^11.0.5",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vue": "^3.5.13",
    "vue-konva": "^3.2.0"
  },
  "build": {
    "appId": "com.planogram.editor",
    "directories": {
      "output": "release/${version}",
      "app": "dist-electron"
    },
    "files": [
      "dist-electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "asar": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true
    }
  },
  "devDependencies": {
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/tsconfig": "^0.7.0",
    "typescript": "^5.7.3",
    "vite": "^6.0.11",
    "vue-tsc": "^2.2.0"
  }
}
